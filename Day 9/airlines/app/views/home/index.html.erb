<div class="text-center py-20">
  <h1 class="text-4xl font-bold mb-4">Welcome to SkyeAir</h1>
  
  <% unless logged_in? %>
    <p class="text-lg text-gray-700 mb-6">Please log in or signup to explore class lounges.</p>
    <%= link_to "Login", login_path, class: "bg-blue-600 text-white px-4 py-2 rounded mr-2" %>
    <%= link_to "Signup", signup_path, class: "bg-green-600 text-white px-4 py-2 rounded" %>
  <% end %>
</div>
