<div class="max-w-md mx-auto bg-white p-6 rounded shadow">
  <h2 class="text-2xl font-bold mb-4">Login</h2>

  <%= form_with url: login_path, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium" %>
      <%= f.email_field :email, name: "session[email]", class: "border rounded w-full p-2" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-sm font-medium" %>
      <%= f.password_field :password, name: "session[password]", class: "border rounded w-full p-2" %>
    </div>

    <%= f.submit "Login", class: "bg-green-600 text-white px-4 py-2 rounded" %>
  <% end %>
</div>
