<div class="max-w-3xl mx-auto py-10">
  <h1 class="text-3xl font-bold mb-4"><%= @post.title %></h1>
  <p class="text-gray-700 mb-6"><%= @post.content %></p>

  <hr class="my-6">

  <h2 class="text-2xl font-semibold mb-3">Comments</h2>

  <% @post.comments.each do |comment| %>
    <div class="bg-gray-100 p-3 rounded mb-2">
      <p class="text-sm text-gray-500"><%= comment.author %> says:</p>
      <p class="text-gray-700"><%= comment.content %></p>
    </div>
  <% end %>

  <%= form_with(model: [@post, @comment], local: true, class: "mt-4") do |form| %>
    <div class="mb-2">
      <%= form.label :author, class: "block text-sm font-medium" %>
      <%= form.text_field :author, class: "border rounded w-full p-2" %>
    </div>

    <div class="mb-2">
      <%= form.label :content, class: "block text-sm font-medium" %>
      <%= form.text_area :content, class: "border rounded w-full p-2" %>
    </div>

    <%= form.submit "Add Comment", class: "bg-blue-600 text-white px-4 py-2 rounded-md" %>
  <% end %>

  <%= link_to "Back to Posts", posts_path, class: "inline-block mt-6 text-blue-600" %>
</div>
