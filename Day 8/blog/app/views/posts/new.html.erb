<div class="max-w-xl mx-auto py-10">
  <h1 class="text-2xl font-semibold mb-6">New Post</h1>

  <%= form_with model: @post, local: true do |form| %>
    <div class="mb-4">
      <%= form.label :title, class: "block text-sm font-medium" %>
      <%= form.text_field :title, class: "border rounded w-full p-2" %>
    </div>

    <div class="mb-4">
      <%= form.label :content, class: "block text-sm font-medium" %>
      <%= form.text_area :content, class: "border rounded w-full p-2" %>
    </div>

    <%= form.submit "Create Post", class: "bg-green-600 text-white px-4 py-2 rounded-md" %>
  <% end %>

  <%= link_to "Back to Posts", posts_path, class: "inline-block mt-6 text-blue-600" %>
</div>
